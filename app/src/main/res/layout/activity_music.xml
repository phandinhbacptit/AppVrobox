                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="30dp"
                        android:background="@xml/radius_border_gray4"/>
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_marginLeft="30dp"
                        android:background="@xml/radius_border_gray4"/>
                </LinearLayout>
            </LinearLayout>
<!--            __________________End black button____________________-->
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
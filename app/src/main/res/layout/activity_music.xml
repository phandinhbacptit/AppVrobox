<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_music"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnMusicBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_icon"/>
    <ImageButton
        android:id="@+id/btnConnectBluetooth"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/bluetooth_off" />
<!--        Start layout outline piano-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@xml/relativelayout_radius_border">
<!-- ________Layout button above piano___________-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:id="@+id/mornitor_display_piano"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@xml/radius_border_white_bg_color" >
            </RelativeLayout>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_merry_chrismas"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mornitor_display_piano"
                android:background="@drawable/merry_chrismas"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_hpbd"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_merry_chrismas"
                android:background="@drawable/hpbd"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_chicken"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_hpbd"
                android:background="@drawable/chicken"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/btn_star"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btn_chicken"
                android:background="@drawable/star"/>




        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@xml/radius_border_gray2">
        <RelativeLayout
            android:id = "@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@xml/radius_border_gray2">
        </RelativeLayout>
        <!--       Layout white pianno button background2-->
        <RelativeLayout
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.5"
                        android:background="@xml/radius_border_white_bg_color" />
